<!DOCTYPE html>
<html>
  <head>
    <title>Alpha Rails Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |name, message| %>
      <h3><%= message %></h3>
    <% end %>
    <%= yield %>
  </body>
</html>
