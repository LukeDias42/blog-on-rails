<h1 class="text-center mt-4"><%= @article.title %></h1>
<div class="row justify-content-md-center">
<div class="col-8 mt-4">
  <div class="container">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header">
        by <%= link_to @article.user.username, @article.user %>
        <%= link_to gravatar_for(@article.user), @article.user %>
      </div>
      <div class="card-body">
        <div class="card-text">
          <%= simple_format(@article.description) %>
        </div>
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
        <% if logged_in? && @article.user == current_user %>
          <%= link_to 'DELETE', article_path(@article), method: :delete, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created <%= time_ago_in_words(@article.created_at) %> ago,
          Edited <%= time_ago_in_words(@article.updated_at) %> ago
        </small>
      </div>
    </div>
  </div>
</div>
</div>